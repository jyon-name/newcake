
<div class="container">
	<div class="row">
		<%= form_for(@item ,url: admin_items_path) do |f| %>
			<div class="item-image">
        		<%= attachment_image_tag @item,:image, class: "img-square", fallback: "no_image.jpg", size:"200x200" %>
      		</div>
      		<%= f.attachment_field :image %>
      		<%= f.label :name, "商品名:" %>
			<%= f.text_field :name %>
			<div>
				<%= f.label :name, "商品説明:" %>
				<%= f.text_area :detail %>
			</div>
			<%= f.label :name, "税抜き価格:" %>
			<%= f.text_field :no_tax_price %>
			<%= f.select :is_sale ,[["販売中","true"],["販売中止","false"]] %>
			<%= f.collection_select :genre_id, Genre.all, :id, :name %>
  			<%= f.submit :create %>
  		<% end %>
	</div>
</div>
