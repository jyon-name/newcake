<!DOCTYPE html>
<html>
  <head>
    <title>Newcak</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if end_user_signed_in? %>
  <div class="container">
    <header class="navbar navbar-fixed-top navbar-inverse">
    <nav class='nav navbar-nav navbar-left' style="margin-left: 30px;">
      <%= link_to root_path do %>
      <span style='color: white;font-size: 30px;'>LOGO</span>
      <% end %>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right" style="margin-right: 30px;">
        <li><%= link_to 'マイページ',about_path,class: 'glyphicon glyphicon-edit sign_up' %></li>
          <li><%= link_to '商品一覧',items_path,class: 'glyphicon glyphicon-edit sign_up' %></li>
           <li><%= link_to 'カート', cart_items_path ,class: 'glyphicon glyphicon-edit sign_up' %></li>
        <li>
             <%= link_to"logout",destroy_end_user_session_path ,method: :delete,class: "glyphicon glyphicon-share" %>
              </li>
            </ul>
          </nav>
        <% elsif admin_signed_in? %>
        <header class="navbar navbar-fixed-top navbar-inverse">

  <div class="container" style='border-bottom: solid 2px black;'>
    <nav class='nav navbar-nav navbar-left' >
      <%#= link_to admins_top_path do %>
      <span style='color: white;font-size: 30px;'>naganocake</span>
      <%# end %>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right pp">

        <li><%= link_to '商品一覧',admin_items_path,class: 'glyphicon glyphicon-edit font'%></li>
        <li><%= link_to "会員一覧",admin_end_users_path, class: 'glyphicon glyphicon font' %></li>
        <li><%= link_to '注文履歴一覧', class: 'glyphicon glyphicon-edit sign_up font' %></li>
        <li><%= link_to "ジャンル一覧",admin_genres_path, class: 'glyphicon glyphicon-edit sign_up font'%></li>
        <li><%= link_to"logout",destroy_admin_session_path ,method: :delete,class: "glyphicon glyphicon-share font" %></li>
       
        <% else %>
        <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <%= link_to root_path do %>
      <span style='color: white;font-size: 30px;'>Nacanocake</span>
      <% end %>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to '商品一覧',class: 'glyphicon glyphicon-edit sign_up' %></li>
          <li><%= link_to '新規登録', new_end_user_registration_path,class: 'glyphicon glyphicon-edit sign_up' %></li>
          <li><%= link_to 'ログイン', new_end_user_session_path ,class: 'glyphicon glyphicon-log-in sign_in'%></li>
<% end %>
      </ul>
    </nav>
  </div>
</header>
<div class="boy" style="margin-top:60px;">
<div class="container">
  

    <%= yield %>
      
    </div>
  </div>
  </body>
</html>
