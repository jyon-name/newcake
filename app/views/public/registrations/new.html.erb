<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
        <tr>
          <td>名前</td>
          <td><%= f.label :first_name, "(姓)" , class: "customer_name" %> <%= f.text_field :first_name %></td>
          <td><%= f.label :last_name, "(名)", class: "customer_name" %> <%= f.text_field :last_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana %></td>
          <td><%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="2"><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :add_code, "郵便番号(ハイフンなし7桁)" %></td>
          <td colspan="2"><%= f.text_field :add_code ,class: "jpostal_code" %>
        </tr>
        <tr>
          <td><%= f.label :address, "住所(郵便番号から自動入力)" %></td>
          <td colspan="2"><%= f.text_field :address, class: "jpostal_address" %></td>
        </tr>
        <tr>
          <td><%= f.label :phone_number, "電話番号" %></td>
          <td colspan="2"><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード" %></td>
          <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
        <tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <tr>
          <td></td>
          <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </tbody>

    </tr>
  </tbody>
</table>
<% end %>

<%= render "public/shared/links" %>
