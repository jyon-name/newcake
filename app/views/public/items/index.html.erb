<div class="container">
	

 	<div class="row">
 		<div style="margin-top:80px;"></div>
 		<div class="col-xs-3">
 			

	<table class='table table-bordered'>
		<thead>


		<tr>
			<th>ジャンル検索</th>

		</tr>
		<tr>
			
		</tr>
		</thead>
		<tbody>
			<tr>
			<% @genres.each do |gnr| %>
		
			<% if gnr.is_vaild == "exit" %>
				<td><%= link_to gnr.name,genre_path(gnr.id),class:"ppc" %></td>
					<% end %>
		</tr>
			<% end %>
		</tbody>
	</table>
</div>
	<div class="col-xs-9">
	
		<table class="table">
			<thead>
				<tr>
					<th>商品名</th>
					<th>税抜き価格</th>
					<th>ジャンル</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |itm| %>
				<tr>
					<% if itm.is_sale != false && itm.genre.is_vaild != "not_exit" %>
					<td><%= itm.name %></td>
					<td><%= itm.no_tax_price %>$</td>
					<td><%= itm.genre.name %></td>
					<td><%= attachment_image_tag itm, :image ,format: "jpeg",size: "200x150"%></td>
					<td><%= link_to "詳細", item_path(itm) %></td>
				</tr>
				<% end %>
				<% end %>
			</tbody>
		</table>
		
	</div>
</div>